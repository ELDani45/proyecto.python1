
import json
import os

archivo = "estudiantes.json"

# Cargar datos desde el archivo o crear lista vacÃ­a
if os.path.exists(archivo):
    with open(archivo, "r") as f:
        listadoEstudiantes = json.load(f)
else:
    listadoEstudiantes = []

menu = [
    "Mostrar todos los estudiantes y sus notas.",
    "Buscar un estudiante por nombre o nÃºmero.",
    "Agregar un nuevo estudiante y sus 3 notas.",
    "Mostrar el promedio de todos.",
    "Salir del programa."
]

def guardar_en_archivo():
    with open(archivo, "w") as f:
        json.dump(listadoEstudiantes, f, indent=4)

while True:
    print("\nğŸ“‹ MENU:")
    for i, op in enumerate(menu, 1):
        print(f" {i}. {op}")
    
    try:
        elejir = int(input("ğŸ”¸ Elija una opciÃ³n (1-5): "))
    except ValueError:
        print("âš ï¸ OpciÃ³n invÃ¡lida. Debes ingresar un nÃºmero.")
        continue

    if elejir == 1:
        print("\nğŸ“ LISTADO DE ESTUDIANTES:")
        for i, est in enumerate(listadoEstudiantes, 1):
            print(f" {i}. {est['nombre'].capitalize()} - Notas: {est['nota']}")

    elif elejir == 2:
        buscar = input("ğŸ” Nombre o nÃºmero del estudiante: ").strip().lower()
        encontrado = False
        for i, est in enumerate(listadoEstudiantes, 1):
            if buscar == est["nombre"].lower() or buscar == str(i):
                print(f"âœ… {i}. {est['nombre'].capitalize()} - Notas: {est['nota']}")
                encontrado = True
                break
        if not encontrado:
            print("âš ï¸ Estudiante no encontrado.")

    elif elejir == 3:
        nombre = input("ğŸ“ Nombre del nuevo estudiante: ").strip()
        notas = []
        for i in range(1, 4):
            try:
                nota = float(input(f"Ingrese nota {i}: "))
                if 0 <= nota <= 5:
                    notas.append(nota)
                else:
                    print("âš ï¸ Nota fuera de rango (0 a 5).")
                    break
            except ValueError:
                print("âš ï¸ Debes ingresar un nÃºmero.")
                break
        else:
            listadoEstudiantes.append({"nombre": nombre.lower(), "nota": notas})
            guardar_en_archivo()
            print("âœ… Estudiante agregado correctamente.")

    elif elejir == 4:
        print("\nğŸ“Š PROMEDIOS:")
        for est in listadoEstudiantes:
            promedio = sum(est["nota"]) / len(est["nota"])
            print(f" - {est['nombre'].capitalize()} | Promedio: {promedio:.2f}")

    elif elejir == 5:
        print("ğŸ‘‹ Programa finalizado.")
        break

    else:
        print("âš ï¸ OpciÃ³n invÃ¡lida.")
